@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel
@{
    ViewData["Title"] = "Access Denied";
}
@{
    Layout = null; // Disable layout for this page
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="container text-center mt-5">
    <div class="card shadow-lg border-danger" style="max-width: 600px; margin: auto;">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Access Denied</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger"><i class="fas fa-exclamation-triangle"></i> You do not have permission to access this page.</h4>
            <p class="mt-3">Please contact your administrator if you believe this is a mistake or try logging in with a different account.</p>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary mt-3"><i class="fas fa-home"></i> Go to Dashboard</a>
        </div>
    </div>
</div>

<!-- Include Font Awesome for icons -->