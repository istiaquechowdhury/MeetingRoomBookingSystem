@using MeetingRoomBooking.Presentation.Areas.Admin.Models
@section Styles
{
    <style>
        body {
            background-color: white;
        }

        section.content {
            padding-top: 20px;
            margin-top: -30px;
        }

        .form-control-underline {
            border: none;
            border-bottom: 1px solid #000;
            border-radius: 0;
            outline: none;
            padding: 10px 0;
            width: 100%;
            background-color: transparent;
            transition: border-color 0.3s ease;
        }

            .form-control-underline:focus {
                border-bottom: 2px solid #007bff;
            }

        .barcode-input-group {
            display: flex;
            align-items: center;
            position: relative;
        }

            .barcode-input-group input {
                flex-grow: 1;
                padding-right: 50px;
            }

        .barcode-image {
            width: 30px;
            height: auto;
            margin-left: -30px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

        h2.text-center {
            margin-top: 0;
            margin-bottom: 0;
            display: inline-block;
            padding-right: 10px;
        }

        hr.border-top {
            border-top: 1px solid black;
            width: 100%;
        }

    </style>
}


@model MeetingRoomUpdateModel
<section class="content py-3" style="background-color: #ffffff;">


    @*   <partial name="_ToasterNotification" /> *@
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <h2 class="text-center mb-2">Update New Meeting</h2>
                <hr class="border-top border-dark mb-4">

                <form asp-area="Admin" asp-controller="MeetingRoom" asp-action="Update" asp-antiforgery="true" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <!-- Full-width fields -->
                        <div class="col-md-12">

                            <!-- Item Name Section -->
                            <div class="mb-4">
                                <input type="text" asp-for="Name" class="form-control-underline" placeholder="Item Name*">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- Category and Measurement Unit Section - side by side -->

                        </div>
                    </div>
                    <div class="row">
                        <!-- Full-width fields -->
                        <div class="col-md-12">

                            <!-- Item Name Section -->
                            <div class="mb-4">
                                <input type="text" asp-for="Facilities" class="form-control-underline" placeholder="Item Name*">
                                <span asp-validation-for="Facilities" class="text-danger"></span>
                            </div>

                            <!-- Category and Measurement Unit Section - side by side -->

                        </div>
                    </div>

                    <div class="row">
                        <!-- Full-width fields -->
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="Clienttype">Capacity</label>
                                <select asp-for="Capacity" class="form-control" asp-items="ViewBag.Capacity">
                                    <option value="">Select Number</option>
                                </select>
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>

                            <!-- Category and Measurement Unit Section - side by side -->

                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="Color">Meeting Room Color</label>
                                <select asp-for="Color" class="form-control" asp-items="ViewBag.Color">
                                    <option value="">Select Color</option>
                                </select>
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            <!-- Category and Measurement Unit Section - side by side -->

                        </div>
                    </div>
                    <div class="row">
                        <!-- Full-width fields -->
                        <div class="col-md-6">

                            <div class="form-group">
                                <div class="mb-4">
                                    <input type="date" asp-for="AvailableDay" class="form-control-underline" placeholder="Select Day">
                                    <span asp-validation-for="AvailableDay" class="text-danger"></span>
                                </div>

                            </div>

                            <!-- Category and Measurement Unit Section - side by side -->

                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <div class="mb-4">
                                    <input type="time" asp-for="Time" class="form-control-underline" placeholder="Select Time">
                                    <span asp-validation-for="Time" class="text-danger"></span>
                                </div>

                            </div>

                            <!-- Category and Measurement Unit Section - side by side -->

                        </div>
                    </div>

                    <div class="row">
                        <!-- Left side starting from Barcode -->
                        <div class="col-md-6">
                            <!-- Stock Quantity and Barcode Section -->
                            <!-- Description Section -->
                            <!-- Upload Image and Status Section -->
                            <div id="imagePreviewContainer" style="display: @(string.IsNullOrEmpty(Model.ImagePath) ? "none" : "block"); margin-top: 10px; margin-bottom: 20px;">
                                <p>Selected Image:</p>
                                <img id="imagePreview" src="@(Model.ImagePath != null ? Url.Content("~/" + Model.ImagePath.Replace("\\", "/")) : "")" alt="Image Preview" style="max-width: 200px; max-height: 200px;">
                            </div>
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" asp-for="RemoveImage" /> Remove current image
                                </label>
                            </div>
                            <button type="button" id="uploadButton" class="btn btn-primary">Upload Image</button>
                            <input type="file" id="ImageFile" name="ImageFile" style="display: none;" />


                            <div class="d-flex align-items-center">
                                <label asp-for="Status" class="mr-2 mb-0">Is active item?</label>
                                <input type="checkbox" asp-for="Status">
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Right side for 'Write a post' section -->

                    </div>

                    <!-- Save Buttons -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-sm mr-2 px-3" id="saveButton">Save</button>
                            <button type="submit" class="btn btn-primary btn-sm mr-2 px-3" id="saveAndNewButton">Save and New</button>
                            <button type="button" class="btn btn-danger btn-sm px-3" onclick="window.location.href='/Admin/MeetingRoom'">Cancel</button>
                        </div>
                    </div>

                    <input type="hidden" id="redirectToNew" name="redirectToNew" value="false" />
                </form>
            </div>
        </div>
    </div>
</section>



@section Scripts
{



    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>



